<?xml version="1.0" encoding="UTF-8"?>

<openbox_config>
  <applications>
    <application class="plex-desktop">
      <maximized>true</maximized>
      <focus>yes</focus>
      <layer>above</layer>
      <desktop>all</desktop>
    </application>
  </applications>

  <mouse>
    <context name="Frame">
      <mousebind button="A-Left" action="Drag">
        <action name="Move"/>
      </mousebind>
      <mousebind button="A-Right" action="Resize">
        <action name="Resize"/>
      </mousebind>
    </context>
  </mouse>

  <keyboard>
    <!-- Navigation bindings similar to Kodi -->
    <keybind key="Up">
      <action name="SendKey">
        <key>Up</key>
      </action>
    </keybind>

    <keybind key="Down">
      <action name="SendKey">
        <key>Down</key>
      </action>
    </keybind>

    <keybind key="Left">
      <action name="SendKey">
        <key>Left</key>
      </action>
    </keybind>

    <keybind key="Right">
      <action name="SendKey">
        <key>Right</key>
      </action>
    </keybind>

    <!-- Select or Confirm action, mapped to Enter/Return -->
    <keybind key="Return">
      <action name="SendKey">
        <key>Return</key>
      </action>
    </keybind>

    <!-- Back action, mapped to Escape -->
    <keybind key="Escape">
      <action name="SendKey">
        <key>Escape</key>
      </action>
    </keybind>

    <!-- Playback controls -->
    <keybind key="P"> <!-- Play -->
      <action name="SendKey">
        <key>P</key>
      </action>
    </keybind>

    <keybind key="Space"> <!-- Pause/Play toggle -->
      <action name="SendKey">
        <key>Space</key>
      </action>
    </keybind>

    <keybind key="X"> <!-- Stop -->
      <action name="SendKey">
        <key>X</key>
      </action>
    </keybind>

    <keybind key="F"> <!-- Fast forward -->
      <action name="SendKey">
        <key>F</key>
      </action>
    </keybind>

    <keybind key="R"> <!-- Rewind -->
      <action name="SendKey">
        <key>R</key>
      </action>
    </keybind>

    <keybind key="M"> <!-- Mute toggle -->
      <action name="SendKey">
        <key>M</key>
      </action>
    </keybind>

    <keybind key="S"> <!-- Stop -->
      <action name="SendKey">
        <key>S</key>
      </action>
    </keybind>

    <!-- Fullscreen toggle -->
    <keybind key="F11">
      <action name="ToggleFullscreen"/>
    </keybind>
  </keyboard>
</openbox_config>
